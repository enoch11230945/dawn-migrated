{%- comment -%}
  AUREA Product Accordion Section
  Collapsible FAQ/Info blocks for product pages.
  Fully editable via Shopify Theme Editor.
{%- endcomment -%}

<div class="aurea-product-accordion" style="margin: 2rem 0;">
  {% for block in section.blocks %}
    <details class="aurea-accordion-item" {{ block.shopify_attributes }}>
      <summary class="aurea-accordion-summary">
        <span class="aurea-accordion-title">{{ block.settings.title }}</span>
        <span class="aurea-accordion-icon">+</span>
      </summary>
      <div class="aurea-accordion-content">
        {{ block.settings.content }}
      </div>
    </details>
  {% endfor %}
</div>

<style>
  .aurea-product-accordion {
    max-width: 100%;
  }

  .aurea-accordion-item {
    border-bottom: 1px solid #E5E5E5;
  }

  .aurea-accordion-summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 0;
    cursor: pointer;
    list-style: none;
  }

  .aurea-accordion-summary::-webkit-details-marker {
    display: none;
  }

  .aurea-accordion-title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1rem;
    font-weight: 500;
    color: #1A1A1A;
    letter-spacing: 0.02em;
  }

  .aurea-accordion-icon {
    font-size: 1.25rem;
    color: #666;
    transition: transform 0.2s ease;
  }

  .aurea-accordion-item[open] .aurea-accordion-icon {
    transform: rotate(45deg);
  }

  .aurea-accordion-content {
    padding: 0 0 1.25rem 0;
    font-size: 0.9rem;
    line-height: 1.7;
    color: #555;
  }

  .aurea-accordion-content p {
    margin: 0 0 1rem 0;
  }

  .aurea-accordion-content ul {
    padding-left: 1.25rem;
    margin: 0;
  }

  .aurea-accordion-content li {
    margin-bottom: 0.5rem;
  }
</style>

{% schema %}
{
  "name": "Product Accordion",
  "class": "section-product-accordion",
  "tag": "section",
  "settings": [],
  "blocks": [
    {
      "type": "accordion_item",
      "name": "Accordion Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Description"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Add your content here. You can use <strong>bold</strong>, <em>italic</em>, and bullet lists.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Accordion",
      "blocks": [
        {
          "type": "accordion_item",
          "settings": {
            "title": "Description",
            "content": "<p>This Love Knot necklace represents the unbreakable bond between soulmates.</p>"
          }
        },
        {
          "type": "accordion_item",
          "settings": {
            "title": "Materials",
            "content": "<ul><li>316L Surgical Stainless Steel</li><li>18k Gold PVD Coating</li><li>AAAA Grade Cubic Zirconia</li></ul>"
          }
        },
        {
          "type": "accordion_item",
          "settings": {
            "title": "Shipping & Returns",
            "content": "<p><strong>Shipping:</strong> Free UK delivery on orders over Â£50. Royal Mail Tracked 48.</p><p><strong>Returns:</strong> 30-day hassle-free returns. No questions asked.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
