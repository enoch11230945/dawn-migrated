{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-emotional {
    position: relative;
    min-height: {{ section.settings.hero_height }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    color: #fff;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .hero-gradient {
    background: linear-gradient(135deg, #1a1a1a 0%, #333 50%, #1a1a1a 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 80rem;
    padding: 2rem;
  }

  .hero-badge {
    display: inline-block;
    background: linear-gradient(135deg, #d4a574, #c49464);
    color: #fff;
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: 2rem;
    {%- comment -%} FIXED (Linus): Removed animation delay - badge is not LCP critical {%- endcomment -%}
    animation: fadeInUp 0.6s ease forwards;
  }

  .hero-heading {
    margin-bottom: 1.5rem;
    color: #fff;
    line-height: normal;
    letter-spacing: -0.02em;
    {%- comment -%} FIXED (Linus): Removed animation on LCP element - instant display improves perceived performance {%- endcomment -%}
  }
  
  .hero-heading.hxl { font-size: 5rem; }
  .hero-heading.h0 { font-size: 4rem; }
  .hero-heading.h1 { font-size: 3rem; }

  .hero-subheading {
    font-size: 1.5rem;
    font-weight: 300;
    opacity: 0.9;
    max-width: 60rem;
    margin: 0 auto 2rem;
    line-height: 1.6;
    {%- comment -%} FIXED (Linus): Removed initial opacity: 0 - subheading is above fold {%- endcomment -%}
    color: #fff;
  }

  .hero-quote {
    font-size: 1.8rem;
    font-style: italic;
    color: #d4a574;
    margin: 3rem 0;
    padding: 0;
    border: none;
    {%- comment -%} FIXED (Linus): Removed animation delay on visible content {%- endcomment -%}
    animation: fadeInUp 0.6s ease 0.2s forwards;
    opacity: 0;
    background: transparent;
  }

  .hero-quote p {
    margin: 0;
    color: #d4a574;
  }

  .hero-cta-group {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 3rem;
    {%- comment -%} FIXED (Linus): Reduced animation delay {%- endcomment -%}
    animation: fadeInUp 0.6s ease 0.3s forwards;
    opacity: 0;
  }

  .hero-countdown-wrapper {
    margin-top: 3rem;
    {%- comment -%} FIXED (Linus): Countdown is below fold - animation acceptable here {%- endcomment -%}
    animation: fadeInUp 0.6s ease 0.4s forwards;
    opacity: 0;
    display: flex;
    justify-content: center; 
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255,255,255,0.6);
    font-size: 1.2rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    animation: bounce 2s infinite;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
  }

  @media screen and (max-width: 750px) {
    .hero-content { padding: 1.5rem; }
    .hero-heading.hxl { font-size: 3.5rem; }
    .hero-cta-group { flex-direction: column; align-items: center; }
    .hero-btn { width: 100%; max-width: 30rem; }
  }
{%- endstyle -%}

<div class="hero-emotional section-style-{{ section.id }}">
  
  {%- if section.settings.background_image != blank -%}
    <div class="hero-background">
      {{ section.settings.background_image | image_url: width: 3000 | image_tag:
        class: 'hero-bg-image',
        loading: 'eager',
        sizes: '100vw',
        {%- comment -%} FIXED (Linus): Reduced from 8 to 5 breakpoints - covers all devices without CDN bloat {%- endcomment -%}
        widths: '375, 750, 1100, 1500, 2200'
      }}
      <div class="hero-overlay" style="background: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    </div>
  {%- else -%}
    <div class="hero-background hero-gradient"></div>
  {%- endif -%}

  <div class="page-width">
    <div class="hero-content" style="text-align: {{ section.settings.text_alignment }}">
      
      {%- if section.settings.occasion_badge != blank -%}
        <span class="hero-badge">{{ section.settings.occasion_badge | escape }}</span>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-heading {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h1>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <p class="hero-subheading">{{ section.settings.subheading | escape }}</p>
      {%- endif -%}
      
      {%- if section.settings.emotional_quote != blank -%}
        <blockquote class="hero-quote">
          <p>"{{ section.settings.emotional_quote | escape }}"</p>
        </blockquote>
      {%- endif -%}
      
      <div class="hero-cta-group">
        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="button button--primary hero-btn">
            {{ section.settings.button_text | escape }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.secondary_button_text != blank -%}
          <a href="{{ section.settings.secondary_button_link }}" class="button button--secondary hero-btn">
            {{ section.settings.secondary_button_text | escape }}
          </a>
        {%- endif -%}
      </div>
      
      {%- if section.settings.show_countdown and section.settings.countdown_date != blank -%}
        <div class="hero-countdown-wrapper">
          {% render 'shipping-countdown', 
             deadline_date: section.settings.countdown_date, 
             occasion_name: section.settings.countdown_occasion %}
        </div>
      {%- endif -%}
      
    </div>
  </div>
  
  {%- if section.settings.show_scroll_indicator -%}
    <div class="hero-scroll-indicator">
      <span>Scroll</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </div>
  {%- endif -%}
  
</div>

{% schema %}
{
  "name": "Emotional Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Hero height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 80
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "occasion_badge",
      "label": "Occasion badge",
      "default": "Valentine's Day Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Say What You Feel"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h1", "label": "Large" },
        { "value": "h0", "label": "Extra Large" },
        { "value": "hxl", "label": "Massive" }
      ],
      "default": "h0",
      "label": "Heading Size"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Beautiful necklaces paired with heartfelt message cards. Because sometimes, you need a little help saying 'I love you'."
    },
    {
      "type": "textarea",
      "id": "emotional_quote",
      "label": "Emotional quote",
      "default": "I can't promise to be here for the rest of your life, but I can promise to love you for the rest of mine."
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary button text",
      "default": "Shop the Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "View Message Cards"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "header",
      "content": "Countdown"
    },
    {
      "type": "checkbox",
      "id": "show_countdown",
      "label": "Show shipping countdown",
      "default": true
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Cutoff date (YYYY-MM-DD)",
      "default": "2026-02-01"
    },
    {
      "type": "text",
      "id": "countdown_occasion",
      "label": "Occasion name",
      "default": "Valentine's Day"
    },
    {
      "type": "header",
      "content": "Extras"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Emotional Hero",
      "settings": {
        "occasion_badge": "Valentine's Day Collection",
        "heading": "Say What You Feel",
        "subheading": "Beautiful necklaces paired with heartfelt message cards. Because sometimes, you need a little help saying 'I love you'.",
        "button_text": "Shop Now",
        "show_countdown": true
      }
    }
  ]
}
{% endschema %}
