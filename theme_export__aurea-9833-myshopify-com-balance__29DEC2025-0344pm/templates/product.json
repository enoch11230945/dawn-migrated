{
  "sections": {
    "main": {
      "type": "product-information",
      "blocks": {
        "media-gallery": {
          "type": "_product-media-gallery",
          "static": true,
          "settings": {
            "media_presentation": "grid",
            "media_columns": "two",
            "image_gap": 4,
            "large_first_image": true,
            "icons_style": "none",
            "slideshow_controls_style": "counter",
            "slideshow_mobile_controls_style": "dots",
            "thumbnail_position": "right",
            "thumbnail_width": 44,
            "aspect_ratio": "adapt",
            "constrain_to_viewport": true,
            "media_fit": "contain",
            "media_radius": 0,
            "extend_media": false,
            "zoom": true,
            "video_loop": false,
            "hide_variants": true,
            "padding-block-start": 0,
            "padding-block-end": 0,
            "padding-inline-start": 0,
            "padding-inline-end": 0
          }
        },
        "product-details": {
          "type": "_product-details",
          "static": true,
          "settings": {
            "width": "fill",
            "custom_width": 100,
            "width_mobile": "fill",
            "custom_width_mobile": 100,
            "height": "fit",
            "details_position": "flex-start",
            "gap": 24,
            "sticky_details_desktop": true,
            "inherit_color_scheme": true,
            "color_scheme": "scheme-1",
            "background_media": "none",
            "border": "none",
            "border_radius": 0,
            "padding-block-start": 24,
            "padding-block-end": 24,
            "padding-inline-start": 0,
            "padding-inline-end": 0
          },
          "blocks": {
            "title_group": {
              "type": "group",
              "name": "Title & Price",
              "settings": {
                "content_direction": "column",
                "horizontal_alignment": "flex-start",
                "vertical_alignment": "center",
                "gap": 8,
                "width": "fill",
                "height": "fit",
                "inherit_color_scheme": true
              },
              "blocks": {
                "product_title": {
                  "type": "text",
                  "name": "Product Title (H1)",
                  "settings": {
                    "text": "<h1>{{ closest.product.title }}</h1>",
                    "width": "100%",
                    "alignment": "left",
                    "type_preset": "h2",
                    "font": "var(--font-primary--family)"
                  }
                },
                "product_price": {
                  "type": "price",
                  "settings": {
                    "show_sale_price_first": true,
                    "show_installments": false,
                    "show_tax_info": false,
                    "type_preset": "paragraph",
                    "width": "100%",
                    "alignment": "left",
                    "font": "var(--font-body--family)",
                    "font_size": "1.1rem",
                    "color": "var(--color-foreground)"
                  }
                }
              },
              "block_order": [
                "product_title",
                "product_price"
              ]
            },
            "divider_1": {
              "type": "_divider",
              "name": "Divider",
              "settings": {
                "thickness": 1,
                "corner_radius": "square",
                "width_percent": 100,
                "padding-block-start": 8,
                "padding-block-end": 8
              }
            },
            "variant_picker": {
              "type": "variant-picker",
              "settings": {
                "variant_style": "buttons",
                "show_swatches": true,
                "alignment": "left",
                "padding-block-start": 0,
                "padding-block-end": 0
              }
            },
            "buy_buttons": {
              "type": "buy-buttons",
              "settings": {
                "stacking": true,
                "show_pickup_availability": false,
                "padding-block-start": 16,
                "padding-block-end": 0
              },
              "blocks": {
                "add-to-cart": {
                  "type": "add-to-cart",
                  "static": true,
                  "settings": {
                    "style_class": "button"
                  }
                },
                "accelerated-checkout": {
                  "type": "accelerated-checkout",
                  "static": true,
                  "settings": {}
                }
              },
              "block_order": [
                "add-to-cart",
                "accelerated-checkout"
              ]
            },
            "trust_badges_inline": {
              "type": "group",
              "name": "Trust Badges (Inline)",
              "settings": {
                "content_direction": "row",
                "horizontal_alignment": "flex-start",
                "vertical_alignment": "center",
                "gap": 16,
                "width": "fill",
                "height": "fit",
                "inherit_color_scheme": true,
                "padding-block-start": 16,
                "padding-block-end": 0
              },
              "blocks": {
                "badge_shipping": {
                  "type": "text",
                  "settings": {
                    "text": "<span style='color:#B8860B'>üì¶</span> Royal Mail Tracked",
                    "type_preset": "rte",
                    "font_size": "0.85rem"
                  }
                },
                "badge_waterproof": {
                  "type": "text",
                  "settings": {
                    "text": "<span style='color:#B8860B'>üíß</span> Waterproof",
                    "type_preset": "rte",
                    "font_size": "0.85rem"
                  }
                },
                "badge_warranty": {
                  "type": "text",
                  "settings": {
                    "text": "<span style='color:#B8860B'>‚ôæÔ∏è</span> Lifetime Warranty",
                    "type_preset": "rte",
                    "font_size": "0.85rem"
                  }
                }
              },
              "block_order": [
                "badge_shipping",
                "badge_waterproof",
                "badge_warranty"
              ]
            },
            "divider_2": {
              "type": "_divider",
              "name": "Divider 2",
              "settings": {
                "thickness": 1,
                "corner_radius": "square",
                "width_percent": 100,
                "padding-block-start": 16,
                "padding-block-end": 8
              }
            },
            "product_description": {
              "type": "text",
              "name": "Product Description",
              "settings": {
                "text": "{{ closest.product.description }}",
                "width": "100%",
                "alignment": "left",
                "type_preset": "rte",
                "font": "var(--font-primary--family)",
                "line_height": "normal"
              }
            }
          },
          "block_order": [
            "title_group",
            "divider_1",
            "variant_picker",
            "buy_buttons",
            "trust_badges_inline",
            "divider_2",
            "product_description"
          ]
        }
      },
      "settings": {
        "content_width": "content-center-aligned",
        "desktop_media_position": "left",
        "equal_columns": false,
        "limit_details_width": false,
        "gap": 48,
        "color_scheme": "",
        "padding-block-start": 0,
        "padding-block-end": 0
      }
    },
    "material_science": {
      "type": "section-material-science",
      "blocks": {
        "spec_stone": {
          "type": "spec",
          "settings": {
            "icon": "üíé",
            "title": "The Stone",
            "description": "AAAA Grade Cubic Zirconia (Diamond Simulant)"
          }
        },
        "spec_metal": {
          "type": "spec",
          "settings": {
            "icon": "‚õìÔ∏è",
            "title": "The Metal",
            "description": "316L Surgical Stainless Steel (Hypoallergenic)"
          }
        },
        "spec_finish": {
          "type": "spec",
          "settings": {
            "icon": "üíß",
            "title": "The Finish",
            "description": "18k Real Gold PVD (Waterproof & Sweatproof)"
          }
        }
      },
      "block_order": [
        "spec_stone",
        "spec_metal",
        "spec_finish"
      ],
      "settings": {
        "preheading": "Why It Lasts",
        "heading": "The Science of Forever"
      }
    },
    "bundle_selector": {
      "type": "section-bundle-selector",
      "blocks": {
        "tier_1": {
          "type": "tier",
          "settings": {
            "quantity": 1,
            "discount_percent": 0,
            "show_free_shipping": false,
            "extra_bonus": "",
            "is_popular": false
          }
        },
        "tier_2": {
          "type": "tier",
          "settings": {
            "quantity": 2,
            "discount_percent": 10,
            "show_free_shipping": true,
            "extra_bonus": "",
            "is_popular": true
          }
        },
        "tier_3": {
          "type": "tier",
          "settings": {
            "quantity": 3,
            "discount_percent": 20,
            "show_free_shipping": true,
            "extra_bonus": "Mystery Gift",
            "is_popular": false
          }
        }
      },
      "block_order": [
        "tier_1",
        "tier_2",
        "tier_3"
      ],
      "settings": {
        "title": "BUNDLE & SAVE"
      }
    },
    "product_recommendations": {
      "type": "product-recommendations",
      "blocks": {
        "header_text": {
          "type": "text",
          "name": "Header",
          "settings": {
            "text": "<h3>You May Also Love</h3>",
            "width": "fit-content",
            "alignment": "left",
            "type_preset": "h4",
            "font": "var(--font-primary--family)"
          }
        },
        "static-product-card": {
          "type": "_product-card",
          "name": "Product Card",
          "static": true,
          "settings": {
            "product_card_gap": 8,
            "inherit_color_scheme": true,
            "border": "none",
            "border_radius": 0
          },
          "blocks": {
            "card_gallery": {
              "type": "_product-card-gallery",
              "name": "Media",
              "settings": {
                "image_ratio": "adapt",
                "border": "none",
                "border_radius": 0
              }
            },
            "card_title": {
              "type": "product-title",
              "name": "Title",
              "settings": {
                "width": "100%",
                "alignment": "left",
                "type_preset": "rte",
                "font": "var(--font-body--family)",
                "font_size": "1rem",
                "color": "var(--color-foreground)"
              }
            },
            "card_price": {
              "type": "price",
              "settings": {
                "show_sale_price_first": true,
                "show_installments": false,
                "type_preset": "h6",
                "width": "100%",
                "alignment": "left",
                "font": "var(--font-body--family)",
                "font_size": "1rem",
                "color": "var(--color-foreground)"
              }
            }
          },
          "block_order": [
            "card_gallery",
            "card_title",
            "card_price"
          ]
        }
      },
      "block_order": [
        "header_text"
      ],
      "settings": {
        "product": "{{ closest.product }}",
        "recommendation_type": "related",
        "layout_type": "grid",
        "carousel_on_mobile": false,
        "max_products": 4,
        "columns": 4,
        "mobile_columns": "2",
        "columns_gap": 12,
        "rows_gap": 24,
        "section_width": "page-width",
        "gap": 28,
        "color_scheme": "scheme-1",
        "padding-block-start": 48,
        "padding-block-end": 48
      }
    }
  },
  "order": [
    "main",
    "bundle_selector",
    "material_science",
    "product_recommendations"
  ]
}