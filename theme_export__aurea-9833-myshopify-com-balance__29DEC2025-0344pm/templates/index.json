        "product_list": {
            "type": "product-list",
            "disabled": false,
            "blocks": {
                "static-header": {
                    "type": "_product-list-content",
                    "name": "Header",
                    "static": true,
                    "settings": {
                        "content_direction": "row",
                        "horizontal_alignment": "space-between",
                        "vertical_alignment": "flex-end",
                        "align_baseline": true,
                        "gap": 12,
                        "width": "fill"
                    },
                    "blocks": {
                        "product_list_title": {
                            "type": "_product-list-text",
                            "name": "Title",
                            "settings": {
                                "text": "<h3>Featured Collection</h3>",
                                "width": "fit-content",
                                "alignment": "left",
                                "type_preset": "h3"
                            }
                        }
                    },
                    "block_order": [
                        "product_list_title"
                    ]
                },
                "static-product-card": {
                    "type": "_product-card",
                    "name": "Product Card",
                    "static": true,
                    "settings": {
                        "product_card_gap": 8,
                        "inherit_color_scheme": true
                    },
                    "blocks": {
                        "product_card_gallery": {
                            "type": "_product-card-gallery",
                            "name": "Media",
                            "settings": {
                                "image_ratio": "portrait"
                            }
                        },
                        "product_card_group": {
                            "type": "_product-card-group",
                            "name": "Details",
                            "settings": {
                                "content_direction": "column",
                                "gap": 0,
                                "width": "fill"
                            },
                            "blocks": {
                                "product_title": {
                                    "type": "text",
                                    "name": "Title",
                                    "settings": {
                                        "text": "<h5>{{ closest.product.title }}</h5>",
                                        "width": "100%",
                                        "alignment": "left",
                                        "type_preset": "custom",
                                        "font": "var(--font-body--family)",
                                        "font_size": "1.25rem"
                                    }
                                },
                                "product_price": {
                                    "type": "price",
                                    "name": "Price",
                                    "settings": {
                                        "product": "{{ closest.product }}",
                                        "show_sale_price_first": true,
                                        "width": "100%",
                                        "alignment": "left",
                                        "font": "var(--font-body--family)",
                                        "font_size": "1rem"
                                    }
                                }
                            },
                            "block_order": [
                                "product_title",
                                "product_price"
                            ]
                        }
                    },
                    "block_order": [
                        "product_card_gallery",
                        "product_card_group"
                    ]
                }
            },
