{%- comment -%}
  AUREA Size Guide Snippet
  Elegant ring/necklace size guide modal
  Usage: {% render 'aurea-size-guide' %}
{%- endcomment -%}

<style>
  .aurea-size-guide-trigger {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-family: 'Cormorant', Georgia, serif;
    font-size: 0.85rem;
    font-weight: 500;
    color: #666;
    text-decoration: underline;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    margin-top: 0.5rem;
    transition: color 0.2s ease;
  }
  
  .aurea-size-guide-trigger:hover {
    color: #B8860B;
  }
  
  .aurea-size-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
  }
  
  .aurea-size-modal.is-open {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .aurea-size-modal__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }
  
  .aurea-size-modal__content {
    position: relative;
    background: #FFFBF5;
    max-width: 600px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    padding: 2rem;
    border-radius: 4px;
  }
  
  .aurea-size-modal__close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    cursor: pointer;
    color: #666;
    transition: color 0.2s ease;
  }
  
  .aurea-size-modal__close:hover {
    color: #1A1A1A;
  }
  
  .aurea-size-modal__title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.5rem;
    font-weight: 500;
    color: #1A1A1A;
    margin: 0 0 0.5rem 0;
    text-align: center;
  }
  
  .aurea-size-modal__subtitle {
    font-family: 'Cormorant', Georgia, serif;
    font-size: 1rem;
    color: #666;
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .aurea-size-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    border-bottom: 1px solid #E8E4DF;
    padding-bottom: 1rem;
  }
  
  .aurea-size-tab {
    font-family: 'Cormorant', Georgia, serif;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    background: none;
    border: none;
    padding: 0.5rem 1rem;
    cursor: pointer;
    color: #666;
    transition: color 0.2s ease, border-color 0.2s ease;
    border-bottom: 2px solid transparent;
    margin-bottom: -1rem;
  }
  
  .aurea-size-tab.is-active {
    color: #B8860B;
    border-bottom-color: #B8860B;
  }
  
  .aurea-size-panel {
    display: none;
  }
  
  .aurea-size-panel.is-active {
    display: block;
  }
  
  .aurea-size-table {
    width: 100%;
    border-collapse: collapse;
    font-family: 'Cormorant', Georgia, serif;
  }
  
  .aurea-size-table th,
  .aurea-size-table td {
    padding: 0.75rem;
    text-align: center;
    border-bottom: 1px solid #E8E4DF;
  }
  
  .aurea-size-table th {
    font-weight: 600;
    font-size: 0.85rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #1A1A1A;
    background: #F5F0E6;
  }
  
  .aurea-size-table td {
    font-size: 0.95rem;
  }
  
  .aurea-size-tip {
    margin-top: 2rem;
    padding: 1rem;
    background: #F5F0E6;
    font-family: 'Cormorant', Georgia, serif;
    font-size: 0.9rem;
    line-height: 1.6;
  }
  
  .aurea-size-tip strong {
    color: #B8860B;
  }
  
  /* Ring Size Table Highlight Column (matches Moon Magic style) */
  .aurea-size-table__highlight {
    background: #C9A9A6 !important;
    color: #fff !important;
  }
  
  .aurea-size-table thead .aurea-size-table__highlight {
    background: #B89B98 !important;
  }
  
  .aurea-size-panel__intro {
    text-align: center;
    font-family: 'Cormorant', Georgia, serif;
    font-size: 0.95rem;
    color: #666;
    margin-bottom: 1.5rem;
  }
  
  .aurea-size-table--ring {
    font-size: 0.9rem;
  }
  
  .aurea-size-table--ring tbody tr:nth-child(odd) {
    background: #faf8f5;
  }
</style>

<button type="button" class="aurea-size-guide-trigger" data-open-size-guide>
  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
    <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
    <line x1="12" y1="22.08" x2="12" y2="12"/>
  </svg>
  Size Guide
</button>

<div class="aurea-size-modal" id="aurea-size-modal">
  <div class="aurea-size-modal__overlay" data-close-size-guide></div>
  <div class="aurea-size-modal__content">
    <button type="button" class="aurea-size-modal__close" data-close-size-guide aria-label="Close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <line x1="18" y1="6" x2="6" y2="18"/>
        <line x1="6" y1="6" x2="18" y2="18"/>
      </svg>
    </button>
    
    <h2 class="aurea-size-modal__title">Size Guide</h2>
    <p class="aurea-size-modal__subtitle">Find your perfect fit</p>
    
    <div class="aurea-size-tabs">
      <button type="button" class="aurea-size-tab is-active" data-tab="necklace">Necklaces</button>
      <button type="button" class="aurea-size-tab" data-tab="ring">Rings</button>
      <button type="button" class="aurea-size-tab" data-tab="bracelet">Bracelets</button>
    </div>
    
    {%- comment -%} Necklace Sizes {%- endcomment -%}
    <div class="aurea-size-panel is-active" data-panel="necklace">
      <table class="aurea-size-table">
        <thead>
          <tr>
            <th>Length</th>
            <th>cm</th>
            <th>Placement</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Choker</td>
            <td>35-40 cm</td>
            <td>Sits at base of neck</td>
          </tr>
          <tr>
            <td>Princess</td>
            <td>43-48 cm</td>
            <td>Sits at collarbone</td>
          </tr>
          <tr>
            <td>Matinee</td>
            <td>50-60 cm</td>
            <td>Falls below collarbone</td>
          </tr>
          <tr>
            <td>Opera</td>
            <td>70-90 cm</td>
            <td>Sits at or below bust</td>
          </tr>
        </tbody>
      </table>
      <div class="aurea-size-tip">
        <strong>Tip:</strong> Our necklaces come with an adjustable 5cm extension chain, giving you flexibility in styling.
      </div>
    </div>
    
    {%- comment -%} Ring Sizes {%- endcomment -%}
    <div class="aurea-size-panel" data-panel="ring">
      <p class="aurea-size-panel__intro">At Aurea, we use US and Canadian sizes.</p>
      <table class="aurea-size-table aurea-size-table--ring">
        <thead>
          <tr>
            <th>Diameter (mm)</th>
            <th class="aurea-size-table__highlight">US & Canada Size</th>
            <th>Europe</th>
            <th>UK & Australia</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>14.1</td><td class="aurea-size-table__highlight">3</td><td>46</td><td>F</td></tr>
          <tr><td>14.9</td><td class="aurea-size-table__highlight">4</td><td>48</td><td>H</td></tr>
          <tr><td>15.7</td><td class="aurea-size-table__highlight">5</td><td>50</td><td>J</td></tr>
          <tr><td>16.5</td><td class="aurea-size-table__highlight">6</td><td>52</td><td>L</td></tr>
          <tr><td>17.3</td><td class="aurea-size-table__highlight">7</td><td>54</td><td>N</td></tr>
          <tr><td>18.1</td><td class="aurea-size-table__highlight">8</td><td>57</td><td>P</td></tr>
          <tr><td>18.9</td><td class="aurea-size-table__highlight">9</td><td>60</td><td>R</td></tr>
          <tr><td>19.8</td><td class="aurea-size-table__highlight">10</td><td>62</td><td>T</td></tr>
          <tr><td>20.6</td><td class="aurea-size-table__highlight">11</td><td>64</td><td>V</td></tr>
        </tbody>
      </table>
      <div class="aurea-size-tip">
        <strong>How to measure:</strong> Wrap a piece of string around your finger, mark where it meets, and measure the length in mm.
      </div>
    </div>
    
    {%- comment -%} Bracelet Sizes {%- endcomment -%}
    <div class="aurea-size-panel" data-panel="bracelet">
      <table class="aurea-size-table">
        <thead>
          <tr>
            <th>Size</th>
            <th>Wrist (cm)</th>
            <th>Bracelet Length</th>
          </tr>
        </thead>
        <tbody>
          <tr><td>Small</td><td>14-15 cm</td><td>16 cm</td></tr>
          <tr><td>Medium</td><td>15-17 cm</td><td>18 cm</td></tr>
          <tr><td>Large</td><td>17-19 cm</td><td>20 cm</td></tr>
        </tbody>
      </table>
      <div class="aurea-size-tip">
        <strong>Our bracelets</strong> come with an adjustable chain for a comfortable fit on most wrist sizes.
      </div>
    </div>
    
  </div>
</div>

<script>
  (function() {
    const modal = document.getElementById('aurea-size-modal');
    if (!modal) return;
    
    // Open modal
    document.querySelectorAll('[data-open-size-guide]').forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.add('is-open');
        document.body.style.overflow = 'hidden';
      });
    });
    
    // Close modal
    document.querySelectorAll('[data-close-size-guide]').forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.remove('is-open');
        document.body.style.overflow = '';
      });
    });
    
    // Tab switching
    document.querySelectorAll('.aurea-size-tab').forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.dataset.tab;
        
        // Update tabs
        document.querySelectorAll('.aurea-size-tab').forEach(t => t.classList.remove('is-active'));
        tab.classList.add('is-active');
        
        // Update panels
        document.querySelectorAll('.aurea-size-panel').forEach(p => p.classList.remove('is-active'));
        document.querySelector(`[data-panel="${target}"]`).classList.add('is-active');
      });
    });
    
    // Close on ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('is-open')) {
        modal.classList.remove('is-open');
        document.body.style.overflow = '';
      }
    });
  })();
</script>
