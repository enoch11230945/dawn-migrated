{%- comment -%}
  AUREA Product Schema with Pre-order Support
  Outputs correct Schema.org structured data for products
  Automatically sets availability to PreOrder when product is out of stock but still available
  
  Usage: {% render 'aurea-product-schema', product: product %}
  Place this in your main-product.liquid or product template
{%- endcomment -%}

{%- assign variant = product.selected_or_first_available_variant -%}
{%- assign is_preorder = false -%}

{%- comment -%} Determine availability status {%- endcomment -%}
{%- if variant.available -%}
  {%- if variant.inventory_management == 'shopify' and variant.inventory_quantity <= 0 and variant.inventory_policy == 'continue' -%}
    {%- assign is_preorder = true -%}
    {%- assign availability_schema = 'https://schema.org/PreOrder' -%}
  {%- else -%}
    {%- assign availability_schema = 'https://schema.org/InStock' -%}
  {%- endif -%}
{%- else -%}
  {%- assign availability_schema = 'https://schema.org/OutOfStock' -%}
{%- endif -%}

<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": {{ product.title | json }},
  "description": {{ product.description | strip_html | truncate: 500 | json }},
  "image": [
    {%- for image in product.images limit: 3 -%}
      {{ image | image_url: width: 1200 | json }}{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  ],
  "sku": {{ variant.sku | json }},
  "mpn": {{ variant.barcode | json }},
  "brand": {
    "@type": "Brand",
    "name": {{ product.vendor | json }}
  },
  "offers": {
    "@type": "Offer",
    "url": "{{ shop.url }}{{ product.url }}",
    "priceCurrency": {{ cart.currency.iso_code | json }},
    "price": {{ variant.price | divided_by: 100.0 | json }},
    "availability": "{{ availability_schema }}",
    {%- if is_preorder -%}
    "availabilityStarts": "{{ 'now' | date: '%Y-%m-%d' | date: '%s' | plus: 1296000 | date: '%Y-%m-%d' }}",
    {%- endif -%}
    "priceValidUntil": "{{ 'now' | date: '%Y-%m-%d' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' }}",
    "itemCondition": "https://schema.org/NewCondition",
    "seller": {
      "@type": "Organization",
      "name": {{ shop.name | json }}
    }
  }
  {%- if product.metafields.reviews.rating.value != blank -%}
  ,
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": {{ product.metafields.reviews.rating.value.rating | json }},
    "ratingCount": {{ product.metafields.reviews.rating_count | json }}
  }
  {%- endif -%}
}
</script>

{%- comment -%}
  DEBUG: Uncomment below to see current availability status
  <p style="color: red; font-size: 12px;">
    Schema Availability: {{ availability_schema }}
    | Is Pre-order: {{ is_preorder }}
    | Inventory: {{ variant.inventory_quantity }}
  </p>
{%- endcomment -%}
