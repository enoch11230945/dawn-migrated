{%- comment -%}
  Breadcrumbs Navigation
  Shows: Home / Collection / Product
  
  Usage: {% render 'breadcrumbs' %}
{%- endcomment -%}

<nav class="aurea-breadcrumbs" aria-label="Breadcrumb">
  <ol class="aurea-breadcrumbs__list" itemscope itemtype="https://schema.org/BreadcrumbList">
    
    {%- comment -%} Home {%- endcomment -%}
    <li class="aurea-breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
      <a href="/" class="aurea-breadcrumbs__link" itemprop="item">
        <span itemprop="name">Home</span>
      </a>
      <meta itemprop="position" content="1">
    </li>
    
    {%- comment -%} Collection (if product page) {%- endcomment -%}
    {% if template.name == 'product' and product.collections.size > 0 %}
      {% assign primary_collection = product.collections.first %}
      <li class="aurea-breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <span class="aurea-breadcrumbs__separator">/</span>
        <a href="{{ primary_collection.url }}" class="aurea-breadcrumbs__link" itemprop="item">
          <span itemprop="name">{{ primary_collection.title }}</span>
        </a>
        <meta itemprop="position" content="2">
      </li>
      
      <li class="aurea-breadcrumbs__item aurea-breadcrumbs__item--current" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <span class="aurea-breadcrumbs__separator">/</span>
        <span itemprop="name">{{ product.title }}</span>
        <meta itemprop="position" content="3">
      </li>
    {% elsif template.name == 'collection' %}
      <li class="aurea-breadcrumbs__item aurea-breadcrumbs__item--current" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <span class="aurea-breadcrumbs__separator">/</span>
        <span itemprop="name">{{ collection.title }}</span>
        <meta itemprop="position" content="2">
      </li>
    {% elsif template.name == 'page' %}
      <li class="aurea-breadcrumbs__item aurea-breadcrumbs__item--current" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
        <span class="aurea-breadcrumbs__separator">/</span>
        <span itemprop="name">{{ page.title }}</span>
        <meta itemprop="position" content="2">
      </li>
    {% endif %}
    
  </ol>
</nav>

<style>
  .aurea-breadcrumbs {
    padding: 12px 0;
    font-size: 0.8rem;
  }
  
  .aurea-breadcrumbs__list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 4px;
  }
  
  .aurea-breadcrumbs__item {
    display: flex;
    align-items: center;
    color: #666;
  }
  
  .aurea-breadcrumbs__item--current {
    color: #1A1A1A;
  }
  
  .aurea-breadcrumbs__link {
    color: #666;
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .aurea-breadcrumbs__link:hover {
    color: #B8860B;
  }
  
  .aurea-breadcrumbs__separator {
    margin: 0 6px;
    color: #CCC;
  }
</style>
