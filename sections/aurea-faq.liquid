{%- comment -%}
  AUREA FAQ Section
  PRD v2.0: Section 8.0 - Objection Handling
  Pre-configured with jewelry-specific FAQs for the UK market
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .aurea-faq {
    max-width: 800px;
    margin: 0 auto;
  }
  .aurea-faq__heading {
    text-align: center;
    margin-bottom: 3rem;
  }
  .aurea-faq__subheading {
    color: rgba(var(--color-foreground), 0.6);
    margin-top: 0.5rem;
  }
  .aurea-faq__item {
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
  }
  .aurea-faq__question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-family: var(--font-heading-family);
    font-size: 1.6rem;
    font-weight: 500;
    color: rgb(var(--color-foreground));
  }
  .aurea-faq__question:hover {
    opacity: 0.8;
  }
  .aurea-faq__icon {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }
  .aurea-faq__item[open] .aurea-faq__icon {
    transform: rotate(45deg);
  }
  .aurea-faq__answer {
    padding: 0 0 2rem 0;
    color: rgba(var(--color-foreground), 0.7);
    line-height: 1.8;
  }
  .aurea-faq__trust {
    margin-top: 3rem;
    text-align: center;
    padding: 2rem;
    background: rgba(var(--color-foreground), 0.03);
    border-radius: var(--media-radius);
  }
  .aurea-faq__trust-icons {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 1rem;
  }
  .aurea-faq__trust-icon {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.2rem;
    color: rgba(var(--color-foreground), 0.6);
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width aurea-faq">
    <div class="aurea-faq__heading">
      <h2 class="h1">{{ section.settings.heading | default: 'Frequently Asked Questions' }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="aurea-faq__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="aurea-faq__items">
      {% for block in section.blocks %}
        <details class="aurea-faq__item" {{ block.shopify_attributes }}>
          <summary class="aurea-faq__question">
            <span>{{ block.settings.question }}</span>
            <svg class="aurea-faq__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
          </summary>
          <div class="aurea-faq__answer rte">
            {{ block.settings.answer }}
          </div>
        </details>
      {% endfor %}
    </div>

    {% if section.settings.show_trust_footer %}
      <div class="aurea-faq__trust">
        <p>Still have questions? Email us at <a href="mailto:{{ section.settings.email }}">{{ section.settings.email | default: 'hello@aurea.co.uk' }}</a></p>
        <div class="aurea-faq__trust-icons">
          <span class="aurea-faq__trust-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
            Secure Checkout
          </span>
          <span class="aurea-faq__trust-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
            30-Day Returns
          </span>
          <span class="aurea-faq__trust-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="4" width="20" height="16" rx="2"/><line x1="2" y1="10" x2="22" y2="10"/></svg>
            UK Stock
          </span>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "AUREA FAQ",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Everything you need to know about our jewelry"
    },
    {
      "type": "checkbox",
      "id": "show_trust_footer",
      "label": "Show trust footer",
      "default": true
    },
    {
      "type": "text",
      "id": "email",
      "label": "Contact email",
      "default": "hello@aurea.co.uk"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your jewelry made of?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>All AUREA jewelry is made from premium 316L Stainless Steel with PVD gold plating. This means it won't tarnish, fade, or turn your skin green.</p>"
        }
      ]
    }
  ],
