{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .product-value-section {
    background-color: {{ section.settings.bg_color }};
  }

  .value-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 100rem;
    margin: 0 auto;
  }

  .value-card {
    background: rgb(var(--color-background));
    border-radius: var(--media-radius);
    padding: 2.5rem;
    text-align: center;
    position: relative;
    border: 1px solid rgba(var(--color-foreground), 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  }

  .value-card.premium {
    border-color: #d4a574;
    background: linear-gradient(180deg, rgb(var(--color-background)) 0%, rgba(212, 165, 116, 0.05) 100%);
  }

  .tier-badge {
    position: absolute;
    top: -1.2rem;
    left: 50%;
    transform: translateX(-50%);
    background: rgb(var(--color-foreground));
    color: rgb(var(--color-background));
    padding: 0.4rem 1.25rem;
    border-radius: 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .tier-badge.premium {
    background: #d4a574;
    color: white;
  }

  .value-card .product-name {
    font-size: 2rem;
    margin: 1.5rem 0 1rem;
    color: rgb(var(--color-foreground));
  }

  .price-display {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .price-display .compare-price {
    font-size: 1.4rem;
    color: rgba(var(--color-foreground), 0.6);
    text-decoration: line-through;
  }

  .price-display .current-price {
    font-size: 2.8rem;
    font-weight: 600;
    color: rgb(var(--color-foreground));
  }

  .value-card .product-desc {
    font-size: 1.4rem;
    color: rgba(var(--color-foreground), 0.75);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem;
    text-align: left;
    flex-grow: 1;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.8rem 0;
    font-size: 1.4rem;
    color: rgba(var(--color-foreground), 0.85);
  }

  .feature-list svg {
    color: #d4a574;
    flex-shrink: 0;
    width: 1.6rem;
    height: 1.6rem;
  }

  .value-cta {
    margin-top: auto;
    width: 100%;
  }

  .product-meta {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
  }
  
  .stock-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 1.2rem;
      color: #2da156;
      font-weight: 500;
  }
  .stock-badge svg {
      animation: pulse 2s infinite;
  }
  
  .value-guarantee {
     display: flex;
     align-items: center;
     justify-content: center;
     gap: 2rem;
     margin-top: 4rem;
     padding: 3rem;
     background: rgb(var(--color-background));
     border-radius: var(--media-radius);
     max-width: 80rem;
     margin-left: auto;
     margin-right: auto;
     border: 1px solid rgba(var(--color-foreground), 0.08);
  }
  
  .guarantee-icon {
      width: 6rem;
      height: 6rem;
      border-radius: 50%;
      background: rgba(var(--color-foreground), 0.05);
      display: flex;
      align-items: center;
      justify-content: center;
      color: #d4a574;
      flex-shrink: 0;
  }
  
  .guarantee-content h4 {
      font-size: 1.6rem;
      margin: 0 0 0.5rem;
      color: rgb(var(--color-foreground));
  }
  .guarantee-content p {
      font-size: 1.4rem;
      color: rgba(var(--color-foreground), 0.75);
      margin: 0;
  }

  @media screen and (max-width: 750px) {
      .value-guarantee {
          flex-direction: column;
          text-align: center;
      }
      .value-grid {
          grid-template-columns: 1fr;
      }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

{%- endstyle -%}

<div class="product-value-section section-{{ section.id }}-padding">
  <div class="page-width">
    
    <div class="value-grid">
      {%- for block in section.blocks -%}
          <div class="value-card {{ block.settings.tier }}" {{ block.shopify_attributes }}>
            
            {%- if block.settings.badge != blank -%}
                <span class="tier-badge {{ block.settings.tier }}">{{ block.settings.badge | escape }}</span>
            {%- endif -%}
            
            <h3 class="product-name h3">{{ block.settings.product_name | escape }}</h3>
            
            <div class="price-display">
                {%- if block.settings.compare_price != blank -%}
                    <span class="compare-price">{{ block.settings.compare_price }}</span>
                {%- endif -%}
                <span class="current-price">{{ block.settings.price }}</span>
            </div>
            
            <p class="product-desc">{{ block.settings.description | escape }}</p>
            
            <ul class="feature-list">
              {%- if block.settings.feature_1 != blank -%}
                <li><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 6L9 17l-5-5"/></svg>{{ block.settings.feature_1 }}</li>
              {%- endif -%}
              {%- if block.settings.feature_2 != blank -%}
                <li><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 6L9 17l-5-5"/></svg>{{ block.settings.feature_2 }}</li>
              {%- endif -%}
              {%- if block.settings.feature_3 != blank -%}
                <li><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 6L9 17l-5-5"/></svg>{{ block.settings.feature_3 }}</li>
              {%- endif -%}
              {%- if block.settings.feature_4 != blank -%}
                <li><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 6L9 17l-5-5"/></svg>{{ block.settings.feature_4 }}</li>
              {%- endif -%}
            </ul>
            
            <a href="{{ block.settings.product_link | default: '#' }}" class="button {% if block.settings.tier == 'premium' %}button--primary{% else %}button--secondary{% endif %} value-cta">
                {{ block.settings.cta_text | default: 'Shop Now' }}
            </a>
            
            <div class="product-meta">
                <span class="stock-badge">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                    <circle cx="12" cy="12" r="6"/>
                  </svg>
                  In Stock - Ships from UK
                </span>
            </div>
            
          </div>
      {%- endfor -%}
    </div>
    
    {%- if section.settings.show_guarantee -%}
      <div class="value-guarantee">
        <div class="guarantee-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            <path d="M9 12l2 2 4-4"/>
          </svg>
        </div>
        <div class="guarantee-content">
          <h4>{{ section.settings.guarantee_title }}</h4>
          <p>{{ section.settings.guarantee_text }}</p>
        </div>
      </div>
    {%- endif -%}
    
  </div>
</div>

{% schema %}
{
  "name": "Product Value",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#faf9f8"
    },
    {
      "type": "checkbox",
      "id": "show_guarantee",
      "label": "Show guarantee",
      "default": true
    },
    {
      "type": "text",
      "id": "guarantee_title",
      "label": "Guarantee title",
      "default": "30-Day Money Back Guarantee"
    },
    {
      "type": "text",
      "id": "guarantee_text",
      "label": "Guarantee text",
      "default": "If they're not absolutely delighted, return it for a full refund. No questions asked."
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Tier",
      "settings": [
        {
          "type": "select",
          "id": "tier",
          "label": "Tier style",
          "options": [
            { "value": "standard", "label": "Standard" },
            { "value": "premium", "label": "Premium" }
          ],
          "default": "standard"
        },
        {
          "type": "text",
          "id": "badge",
          "label": "Badge text",
          "default": "Best Value"
        },
        {
          "type": "text",
          "id": "product_name",
          "label": "Product name",
          "default": "Love Knot Necklace"
        },
        {
          "type": "text",
          "id": "compare_price",
          "label": "Compare at price",
          "default": "£49.99"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "£24.99"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "14K white gold finish over 316L stainless steel. Built to last forever."
        },
        {
          "type": "text",
          "id": "feature_1",
          "label": "Feature 1",
          "default": "316L Stainless Steel"
        },
        {
          "type": "text",
          "id": "feature_2",
          "label": "Feature 2",
          "default": "PVD Gold Plating"
        },
        {
          "type": "text",
          "id": "feature_3",
          "label": "Feature 3",
          "default": "Waterproof & Tarnish-Free"
        },
        {
          "type": "text",
          "id": "feature_4",
          "label": "Feature 4",
          "default": "Message Card Included"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product link"
        },
        {
          "type": "text",
          "id": "cta_text",
          "label": "Button text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Comparison",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card", "settings": { "tier": "premium" } }
      ]
    }
  ]
}
{% endschema %}
