{%- comment -%}
  Anatomy of Gift - "The Complete Gifting Experience"
  Image Left, Text Right - shows what's in the box
  Based on page.md Block 5 specification
{%- endcomment -%}

<section class="aurea-gift-anatomy page-width" style="
  padding: 5rem 2rem;
">
  <div style="
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  " class="aurea-gift-anatomy__grid">
    
    {%- comment -%} Image {%- endcomment -%}
    <div>
      {% if section.settings.image %}
        <img 
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.heading }}"
          style="width: 100%; height: auto; display: block;"
          loading="lazy"
        >
      {% else %}
        <div style="
          background: #F5F0E6;
          aspect-ratio: 4/3;
          display: flex;
          align-items: center;
          justify-content: center;
          font-family: 'Cormorant', Georgia, serif;
          color: rgba(26,26,26,0.5);
        ">
          [Gift Box Image]
        </div>
      {% endif %}
    </div>
    
    {%- comment -%} Text Content {%- endcomment -%}
    <div>
      <p style="
        font-family: 'Cormorant', Georgia, serif;
        font-size: 0.85rem;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: #B8860B;
        margin-bottom: 0.75rem;
      ">{{ section.settings.preheading }}</p>
      
      <h2 style="
        font-family: 'Playfair Display', Georgia, serif;
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 400;
        margin-bottom: 2rem;
        line-height: 1.3;
      ">{{ section.settings.heading }}</h2>
      
      <ul style="
        list-style: none;
        padding: 0;
        margin: 0 0 2rem 0;
      ">
        {% for block in section.blocks %}
          <li style="
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            margin-bottom: 1rem;
            font-family: 'Cormorant', Georgia, serif;
            font-size: 1.1rem;
            line-height: 1.6;
          " {{ block.shopify_attributes }}>
            <span style="color: #D4AF37; flex-shrink: 0;">✓</span>
            <span>
              <strong>{{ block.settings.title }}</strong>
              {% if block.settings.subtitle != blank %}
                <span style="color: rgba(26,26,26,0.7);"> — {{ block.settings.subtitle }}</span>
              {% endif %}
            </span>
          </li>
        {% endfor %}
      </ul>
      
      {% if section.settings.button_text != blank %}
        <a 
          href="{{ section.settings.button_link }}"
          class="aurea-gift-btn"
        >{{ section.settings.button_text }}</a>
      {% endif %}
      
    </div>
    
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .aurea-gift-anatomy__grid {
      grid-template-columns: 1fr !important;
      gap: 2rem !important;
    }
  }
  
  .aurea-gift-btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-family: 'Cormorant', Georgia, serif;
    font-weight: 600;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #0D0D0D;
    background: transparent;
    border: 1px solid #0D0D0D;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .aurea-gift-btn:hover {
    background: #0D0D0D;
    color: #FAF8F5;
  }
</style>

{% schema %}
{
  "name": "Gift Anatomy",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "preheading",
      "label": "Preheading",
      "default": "What's Inside"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Complete Gifting Experience"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Gift Her Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "18k Gold Finish"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle (optional)",
          "default": "Not cheap alloy"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gift Anatomy",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "18k Gold PVD Finish",
            "subtitle": "Not cheap alloy"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Premium Message Card",
            "subtitle": "Heavyweight paper"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Luxury Soft-Touch Box",
            "subtitle": "Free upgrade"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Lifetime Warranty",
            "subtitle": "Will never tarnish"
          }
        }
      ]
    }
  ]
}
{% endschema %}
