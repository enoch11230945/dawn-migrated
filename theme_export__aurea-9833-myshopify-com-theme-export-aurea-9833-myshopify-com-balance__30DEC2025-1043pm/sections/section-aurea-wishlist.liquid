{%- comment -%}
  AUREA Wishlist Page Section
  Display saved wishlist items from localStorage
  
  Usage: Create a page "wishlist" and add this section
{%- endcomment -%}

<section class="aurea-wishlist-page" style="padding: 4rem 0; min-height: 50vh;">
  <div style="max-width: 1000px; margin: 0 auto; padding: 0 1.5rem;">
    
    {%- comment -%} Header {%- endcomment -%}
    <header style="text-align: center; margin-bottom: 3rem;">
      <h1 style="font-family: 'Playfair Display', Georgia, serif; font-size: 2.25rem; font-weight: 400; color: #1A1A1A; margin: 0 0 0.5rem 0;">
        {{ section.settings.title | default: 'Your Wishlist' }}
      </h1>
      <p style="font-family: 'Cormorant', Georgia, serif; font-size: 1rem; color: #666;">
        {{ section.settings.subtitle | default: 'Save your favourite pieces for later' }}
      </p>
    </header>
    
    {%- comment -%} Empty State {%- endcomment -%}
    <div id="wishlist-empty" style="text-align: center; padding: 3rem 0; display: none;">
      <div style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;">ðŸ’”</div>
      <h2 style="font-family: 'Playfair Display', Georgia, serif; font-size: 1.5rem; font-weight: 400; color: #1A1A1A; margin: 0 0 0.75rem 0;">
        Your wishlist is empty
      </h2>
      <p style="font-family: 'Cormorant', Georgia, serif; font-size: 1rem; color: #666; margin: 0 0 1.5rem 0;">
        Browse our collection and click the heart icon to save items you love.
      </p>
      <a href="/collections/all" style="display: inline-block; background: #1A1A1A; color: #fff; font-family: 'Cormorant', Georgia, serif; font-size: 0.9rem; font-weight: 600; letter-spacing: 0.1em; text-transform: uppercase; padding: 0.875rem 2rem; text-decoration: none; border-radius: 4px;">
        Start Shopping
      </a>
    </div>
    
    {%- comment -%} Wishlist Grid {%- endcomment -%}
    <div id="wishlist-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 1.5rem;">
      {%- comment -%} Items populated by JavaScript {%- endcomment -%}
    </div>
    
    {%- comment -%} Clear All Button {%- endcomment -%}
    <div id="wishlist-actions" style="text-align: center; margin-top: 2rem; display: none;">
      <button 
        type="button" 
        id="clear-wishlist"
        style="background: none; border: 1px solid #C62828; color: #C62828; font-family: 'Cormorant', Georgia, serif; font-size: 0.9rem; padding: 0.75rem 1.5rem; border-radius: 4px; cursor: pointer; transition: all 0.3s ease;"
        onmouseover="this.style.background='#C62828'; this.style.color='#fff';"
        onmouseout="this.style.background='none'; this.style.color='#C62828';"
      >
        Clear Wishlist
      </button>
    </div>
    
  </div>
</section>

<style>
  .wishlist-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }
  
  .wishlist-card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    transform: translateY(-4px);
  }
  
  .wishlist-card__image {
    aspect-ratio: 1;
    overflow: hidden;
    background: #F5F0E6;
  }
  
  .wishlist-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  
  .wishlist-card:hover img {
    transform: scale(1.05);
  }
  
  .wishlist-card__info {
    padding: 1rem;
  }
  
  .wishlist-card__title {
    font-family: 'Cormorant', Georgia, serif;
    font-size: 1rem;
    color: #1A1A1A;
    margin: 0 0 0.5rem 0;
    text-decoration: none;
    display: block;
  }
  
  .wishlist-card__price {
    font-family: 'Cormorant', Georgia, serif;
    font-size: 1rem;
    font-weight: 600;
    color: #B8860B;
  }
  
  .wishlist-card__remove {
    background: none;
    border: none;
    color: #999;
    cursor: pointer;
    padding: 0.5rem;
    transition: color 0.2s ease;
  }
  
  .wishlist-card__remove:hover {
    color: #C62828;
  }
</style>

<script>
(function() {
  const WISHLIST_KEY = 'aurea_wishlist';
  const grid = document.getElementById('wishlist-grid');
  const emptyState = document.getElementById('wishlist-empty');
  const actions = document.getElementById('wishlist-actions');
  
  function getWishlist() {
    try {
      return JSON.parse(localStorage.getItem(WISHLIST_KEY)) || [];
    } catch {
      return [];
    }
  }
  
  function saveWishlist(wishlist) {
    localStorage.setItem(WISHLIST_KEY, JSON.stringify(wishlist));
  }
  
  function removeItem(productId) {
    const wishlist = getWishlist().filter(item => item.id !== productId);
    saveWishlist(wishlist);
    renderWishlist();
  }
  
  function clearWishlist() {
    if (confirm('Are you sure you want to clear your entire wishlist?')) {
      localStorage.removeItem(WISHLIST_KEY);
      renderWishlist();
    }
  }
  
  function renderWishlist() {
    const wishlist = getWishlist();
    
    if (wishlist.length === 0) {
      grid.style.display = 'none';
      actions.style.display = 'none';
      emptyState.style.display = 'block';
      return;
    }
    
    grid.style.display = 'grid';
    actions.style.display = 'block';
    emptyState.style.display = 'none';
    
    grid.innerHTML = wishlist.map(item => `
      <div class="wishlist-card" data-product-id="${item.id}">
        <a href="/products/${item.handle}" class="wishlist-card__image">
          <img src="${item.image}" alt="${item.title}" loading="lazy">
        </a>
        <div class="wishlist-card__info">
          <div style="display: flex; justify-content: space-between; align-items: flex-start;">
            <div>
              <a href="/products/${item.handle}" class="wishlist-card__title">${item.title}</a>
              <span class="wishlist-card__price">${item.price}</span>
            </div>
            <button 
              type="button" 
              class="wishlist-card__remove" 
              onclick="window.removeWishlistItem(${item.id})"
              aria-label="Remove from wishlist"
            >
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
          <a 
            href="/products/${item.handle}" 
            style="display: block; text-align: center; margin-top: 0.75rem; padding: 0.5rem; background: #1A1A1A; color: #fff; font-family: 'Cormorant', Georgia, serif; font-size: 0.85rem; text-decoration: none; border-radius: 4px;"
          >
            View Product
          </a>
        </div>
      </div>
    `).join('');
  }
  
  // Expose remove function globally
  window.removeWishlistItem = removeItem;
  
  // Clear button
  document.getElementById('clear-wishlist').addEventListener('click', clearWishlist);
  
  // Initial render
  renderWishlist();
})();
</script>

{% schema %}
{
  "name": "Wishlist Page",
  "tag": "section",
  "class": "section-wishlist",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your Wishlist"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Save your favourite pieces for later"
    }
  ],
  "presets": [
    {
      "name": "Wishlist Page"
    }
  ]
}
{% endschema %}
