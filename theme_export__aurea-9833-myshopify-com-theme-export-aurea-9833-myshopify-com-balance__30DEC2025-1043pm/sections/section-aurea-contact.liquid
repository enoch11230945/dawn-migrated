      "content": "Heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "We'd Love to Hear From You"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Have a question about your order, materials, or just want to say hello? Our small studio team is here to help.</p>"
    },
    {
      "type": "header",
      "content": "Contact Info"
    },
    {
      "type": "checkbox",
      "id": "show_hours",
      "label": "Show business hours",
      "default": true
    },
    {
      "type": "text",
      "id": "hours_title",
      "label": "Hours title",
      "default": "Customer Care Hours"
    },
    {
      "type": "text",
      "id": "hours_text",
      "label": "Hours text",
      "default": "Monday - Friday: 9am - 5pm (GMT)"
    },
    {
      "type": "checkbox",
      "id": "show_email",
      "label": "Show email address",
      "default": true
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email address",
      "default": "hello@aurea.co.uk"
    },
    {
      "type": "checkbox",
      "id": "show_location",
      "label": "Show location",
      "default": true
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location",
      "default": "London, United Kingdom"
    },
    {
      "type": "text",
      "id": "response_time",
      "label": "Response time note",
      "default": "Please allow 1-2 business days for a response."
    },
    {
      "type": "header",
      "content": "Form"
    },
    {
      "type": "checkbox",
      "id": "show_order_number",
      "label": "Show order number field",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Submit button text",
      "default": "Send Message"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "We've received your message and will get back to you within 24-48 hours."
    },
    {
      "type": "header",
      "content": "FAQ Link"
    },
    {
      "type": "checkbox",
      "id": "show_faq_link",
      "label": "Show FAQ link",
      "default": true
    },
    {
      "type": "url",
      "id": "faq_url",
      "label": "FAQ page URL"
    }
  ],
  "presets": [
    {
      "name": "AUREA Contact"
    }
  ]
}
{% endschema %}
