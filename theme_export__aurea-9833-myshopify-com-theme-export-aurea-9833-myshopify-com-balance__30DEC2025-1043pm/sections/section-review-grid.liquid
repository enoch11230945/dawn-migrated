{%- comment -%}
  Review Grid - "Emotional Evidence"
  Static testimonials with gold stars - no slider bloat
  Based on page.md Block 4 specification
{%- endcomment -%}

<section class="aurea-reviews" style="
  background: #F5F0E6;
  padding: 5rem 2rem;
">
  <div class="page-width">
    
    <div style="text-align: center; margin-bottom: 3rem;">
      <p style="
        font-family: 'Cormorant', Georgia, serif;
        font-size: 0.85rem;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: #B8860B;
        margin-bottom: 0.75rem;
      ">{{ section.settings.preheading }}</p>
      <h2 style="
        font-family: 'Playfair Display', Georgia, serif;
        font-size: clamp(1.75rem, 4vw, 2.5rem);
        font-weight: 400;
      ">{{ section.settings.heading }}</h2>
    </div>
    
    <div style="
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    " class="aurea-reviews__grid">
      
      {% for block in section.blocks %}
        <div style="
          background: #FFFFFF;
          padding: 2rem;
          box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        " {{ block.shopify_attributes }}>
          
          {%- comment -%} 5 Gold Stars {%- endcomment -%}
          <div style="margin-bottom: 1rem; color: #D4AF37;">
            ★★★★★
          </div>
          
          {%- comment -%} Review Text {%- endcomment -%}
          <p style="
            font-family: 'Cormorant', Georgia, serif;
            font-size: 1.1rem;
            line-height: 1.7;
            font-style: italic;
            margin-bottom: 1.5rem;
            color: #1A1A1A;
          ">"{{ block.settings.quote }}"</p>
          
          {%- comment -%} Author {%- endcomment -%}
          <div style="
            display: flex;
            align-items: center;
            gap: 0.5rem;
          ">
            <span style="
              font-family: 'Cormorant', Georgia, serif;
              font-weight: 600;
              font-size: 0.95rem;
            ">{{ block.settings.author }}</span>
            {% if block.settings.verified %}
              <span style="
                font-family: 'Cormorant', Georgia, serif;
                font-size: 0.8rem;
                color: #2E7D32;
                display: inline-flex;
                align-items: center;
                gap: 0.25rem;
              ">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="#2E7D32">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
                Verified
              </span>
            {% endif %}
          </div>
          
        </div>
      {% endfor %}
      
    </div>
    
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .aurea-reviews__grid {
      grid-template-columns: 1fr !important;
    }
  }
</style>

{% schema %}
{
  "name": "Review Grid",
  "settings": [
    {
      "type": "text",
      "id": "preheading",
      "label": "Preheading",
      "default": "What Customers Say"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Real Love, Real Stories"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "My wife cried happy tears. Best gift ever."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Mark D."
        },
        {
          "type": "checkbox",
          "id": "verified",
          "label": "Verified Buyer",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Grid",
      "blocks": [
        {
          "type": "review",
          "settings": {
            "quote": "My wife cried happy tears. Best gift ever.",
            "author": "Mark D.",
            "verified": true
          }
        },
        {
          "type": "review",
          "settings": {
            "quote": "Arrived in London in 24 hours. Stunning quality.",
            "author": "Sarah J.",
            "verified": true
          }
        },
        {
          "type": "review",
          "settings": {
            "quote": "The message card says exactly what I felt.",
            "author": "David P.",
            "verified": true
          }
        }
      ]
    }
  ]
}
{% endschema %}
