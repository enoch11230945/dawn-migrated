{%- comment -%}
  AUREA Share Buttons Snippet
  Social share buttons for product pages
  Usage: {% render 'aurea-share', product: product %}
  
  FIXED: Replaced inline onmouseover/onmouseout with CSS :hover
{%- endcomment -%}

<style>
  .aurea-share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border: 1px solid #E8E4DF;
    color: #1A1A1A;
    background: transparent;
    cursor: pointer;
    transition: border-color 0.2s ease, color 0.2s ease;
    text-decoration: none;
  }
  
  .aurea-share-btn:hover {
    border-color: #D4AF37;
    color: #D4AF37;
  }
</style>

<div class="aurea-share" style="
  display: flex;
  align-items: center;
  gap: 1rem;
  margin: 1.5rem 0;
">
  <span style="
    font-family: 'Cormorant', Georgia, serif;
    font-weight: 600;
    font-size: 0.9rem;
    color: #1A1A1A;
  ">Share:</span>
  
  <div style="display: flex; gap: 0.75rem;">
    {%- comment -%} Facebook {%- endcomment -%}
    <a 
      href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ product.url }}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Share on Facebook"
      class="aurea-share-btn"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/>
      </svg>
    </a>
    
    {%- comment -%} Twitter/X {%- endcomment -%}
    <a 
      href="https://twitter.com/intent/tweet?text={{ product.title | url_encode }}&url={{ shop.url }}{{ product.url }}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Share on X"
      class="aurea-share-btn"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
    </a>
    
    {%- comment -%} Pinterest {%- endcomment -%}
    <a 
      href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&media={{ product.featured_image | image_url: width: 1000 }}&description={{ product.title | url_encode }}"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Share on Pinterest"
      class="aurea-share-btn"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
      </svg>
    </a>
    
    {%- comment -%} Email {%- endcomment -%}
    <a 
      href="mailto:?subject=Check out this beautiful jewelry&body=I thought you might like this: {{ shop.url }}{{ product.url }}"
      aria-label="Share via Email"
      class="aurea-share-btn"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
        <polyline points="22,6 12,13 2,6"/>
      </svg>
    </a>
    
    {%- comment -%} Copy Link {%- endcomment -%}
    <button 
      type="button"
      aria-label="Copy link"
      class="aurea-share-btn aurea-copy-btn"
      data-url="{{ shop.url }}{{ product.url }}"
    >
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="aurea-copy-icon">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
      </svg>
      <span class="aurea-copy-check" style="display: none; font-size: 10px; font-family: 'Cormorant', Georgia, serif;">âœ“</span>
    </button>
  </div>
</div>

<script>
  (function() {
    document.querySelectorAll('.aurea-copy-btn').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var url = this.dataset.url;
        var icon = this.querySelector('.aurea-copy-icon');
        var check = this.querySelector('.aurea-copy-check');
        
        navigator.clipboard.writeText(url).then(function() {
          icon.style.display = 'none';
          check.style.display = 'block';
          setTimeout(function() {
            icon.style.display = 'block';
            check.style.display = 'none';
          }, 2000);
        });
      });
    });
  })();
</script>
